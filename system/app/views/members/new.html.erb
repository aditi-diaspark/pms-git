<p class="right">Logged in as <strong><%= current_user.email %></strong>.</p> <br><br>
<style>
table {
  border-collapse: collapse;
  width: 100%;
}

th, td {
  text-align: left;
  padding: 8px;
}

tr:nth-child(even) {background-color: #f2f2f2;}

.right{
  float : right;
}

</style>

<table>
  <tr>
    <th>Team Name</th>
    <th>Project Name</th>
    <th></th>
  </tr>
 
  <% @members.each do |member| %>
    <tr>
      <td><%= member.team_name %></td>
      <td><%= member.project_name %></td>
      <td><%= link_to 'Show', member_path(member) %></td>
      <td><%= link_to 'Delete', member_path(member),
      method: :delete,
      data: { confirm: 'Are you sure?' }  %></td>
    </tr>
  <% end %>
</table>