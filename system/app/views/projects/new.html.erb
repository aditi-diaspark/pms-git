<p class="right">Logged in as <strong><%= current_user.email %></strong>.</p> <br><br>
<style>
table {
  border-collapse: collapse;
  width: 100%;
}

th, td {
  text-align: left;
  padding: 8px;
}

tr:nth-child(even) {background-color: #f2f2f2;}


.right{
  float : right;
}

</style>

<table>
  <tr>
    <th>Project Name</th>
    <th>Description</th>
    <th></th>
  </tr>
 
  <% @projects.each do |project| %>
    <tr>
      <td><%= project.project_name %></td>
      <td><%= project.description %></td>
      <td><%= link_to 'Show', project_path(project) %></td>
      <td><%= link_to 'Delete', project_path(project),
      method: :delete,
      data: { confirm: 'Are you sure?' }  %></td>
    </tr>
  <% end %>
</table>

